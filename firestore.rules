rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 정보는 본인만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 매장 정보는 해당 매장의 관리자만 접근 가능
    match /stores/{storeId} {
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/stores/$(storeId)/admins/$(request.auth.uid));
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/stores/$(storeId)/admins/$(request.auth.uid)).data.role == 'owner';
      
      // 관리자 정보는 해당 매장의 owner만 관리 가능
      match /admins/{adminId} {
        allow read: if request.auth != null && 
          exists(/databases/$(database)/documents/stores/$(storeId)/admins/$(request.auth.uid));
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/stores/$(storeId)/admins/$(request.auth.uid)).data.role == 'owner';
      }
    }
  }
} 